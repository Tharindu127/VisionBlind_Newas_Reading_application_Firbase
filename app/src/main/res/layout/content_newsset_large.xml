<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NewssetLarge"
    tools:showIn="@layout/activity_newsset_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/large_hot_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="2dp">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="Hot News"
                android:padding="5dp"
                android:background="#FF9800"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="65sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/large_political_large"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="2dp">


            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:padding="5dp"
                android:background="#8BC34A"
                android:text="Political News"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="65sp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/large_social_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="65sp"
                android:background="#E91E63"
                android:text="Social News"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/large_sports_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="2dp">


            <TextView
                android:id="@+id/textView47"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#00BCD4"
                android:layout_gravity="bottom"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="65sp"
                android:gravity="center"
                android:text="Sports News"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/large_business_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="2dp">


            <TextView
                android:id="@+id/textView57"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#998675"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="65sp"
                android:text="Business News"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/large_weather_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="2dp">


            <TextView
                android:id="@+id/textView67"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#03A9F4"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="65sp"
                android:text="Weather News"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/large_foreign_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/textView77"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:padding="5dp"
                android:background="#673AB7"
                android:text="Foreign News"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="65sp"
                />


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>